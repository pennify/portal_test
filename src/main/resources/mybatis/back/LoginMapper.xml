<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper>

    <select id="getUser" parameterType="java.lang.String" resultType="com.portal.back.model.User">
        SELECT t.*
        FROM user t
        where t.name = #{name}
    </select>
</mapper>